{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}